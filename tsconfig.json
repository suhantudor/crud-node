{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["esnext", "es6", "es2015"],
    "types": ["node"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "lib",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": ["../node_modules/@types"]
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["dist", "**/node_modules", "examples"]
  },
  "exclude": ["dist", "node_modules", "lib/**/*.spec.ts", "examples"],
  "include": ["lib"]
}
