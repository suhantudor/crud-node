{
  "name": "crud-node",
  "version": "1.2.2",
  "description": "Agnostic nodejs client that simplifies crud operations to a database",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "directories": {
    "example": "examples",
    "lib": "lib"
  },
  "scripts": {
    "watch": "tsc --watch",
    "clean": "shx rm -rf dist",
    "reinstall": "rm -rf node_modules && yarn install",
    "build": "npm run clean && tsc -b",
    "lint": "tsc --noEmit && eslint ./lib",
    "lint:fix": "npx eslint --fix --ext .js,.ts .",
    "lint:report": "npx eslint --ext .js,.ts . -f json -o eslint-report.json",
    "format": "prettier --write \"**/*.+(ts|js|json|md)\"",
    "prepublish": "npm run lint && npm run build",
    "publish:local": "yarn link",
    "publish:npm": "npm publish",
    "bump:patch": "npm version patch",
    "bump:minor": "npm version minor",
    "bump:major": "npm version major"
  },
  "dependencies": {
    "@mysql/xdevapi": "8.0.28",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "eslint-plugin-import": "^2.27.5",
    "knex": "2.1.0",
    "mysql2": "^2.3.3",
    "nanoid": "^3.1.31"
  },
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^4.3.7",
    "prettier": "^2.8.7",
    "shx": "^0.3.4",
    "typescript": "^5.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suhantudor/crud-node.git"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.18.1"
  },
  "keywords": [
    "db",
    "sql",
    "nosql",
    "mysql",
    "percona",
    "mysql x protocol",
    "oracle",
    "mongodb",
    "pg",
    "cassandra"
  ],
  "contributors": [
    {
      "name": "Tudor",
      "email": "suhantudor@gmail.com",
      "url": "https://github.com/suhantudor"
    },
    {
      "name": "Mariia ",
      "email": "masha.rozhkova@gmail.com",
      "url": "https://github.com/mariiasuhan"
    }
  ],
  "license": "UNLICENSED",
  "homepage": "https://github.com/suhantudor/crud-node#README",
  "bugs": {
    "url": "https://github.com/suhantudor/crud-node/issues"
  }
}
